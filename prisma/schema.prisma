generator client {
  provider = "prisma-client-js"
  // Yarn 3 + Yarn PnP + Yarn Zeroでうまく動作するように
  // https://github.com/prisma/prisma/issues/1439
  output   = "../src/generated/prisma"
}

datasource db {
  // provider = "mysql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Namespace {
  id     String   @id @default(uuid())
  name   String
  server Server[]

  @@map("namespaces")
}

model Server {
  id           String         @id @default(uuid())
  namespace    Namespace      @relation(fields: [namespaceId], references: [id])
  namespaceId  String
  name         String
  address      String
  port         Int
  serverStatus ServerStatus[]

  @@map("servers")
}

model ServerStatus {
  id        String   @id @default(uuid())
  server    Server   @relation(fields: [serverId], references: [id])
  serverId  String
  status    String
  updatedAt DateTime

  @@map("server_statuses")
}
